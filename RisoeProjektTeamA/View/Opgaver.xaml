<Page
    x:Class="RisoeProjektTeamA.View.Opgaver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RisoeProjektTeamA.View"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local2="using:RisoeProjektTeamA.ViewModel"
    mc:Ignorable="d">

    <Page.DataContext>
        <local2:OpgaveViewModel/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Source="ms-appx:///Assets/a-team_logo.png" Tapped="Image_Tapped"/>

        <TextBlock HorizontalAlignment="Left" Margin="479,10,0,0" Text="Opgaver" TextWrapping="Wrap" VerticalAlignment="Top" Height="99" Width="404" FontSize="72"/>
        <TextBlock HorizontalAlignment="Left" Margin="1046,10,0,0" Text="BrugerInfo" TextWrapping="Wrap" VerticalAlignment="Top" Height="73" Width="230" FontSize="48"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,110,0,0" Text="Stationsnavn" TextWrapping="Wrap" VerticalAlignment="Top" Height="77" Width="521" FontSize="48"/>

        <StackPanel HorizontalAlignment="Left" Height="275" Margin="573,136,0,0" VerticalAlignment="Top" Width="400">
            <TextBlock Text="Opgave navn" TextWrapping="Wrap" Height="65" FontSize="36" Margin="100,0,0,0"/>
            <TextBlock Text="Data:" TextWrapping="Wrap" Height="65" FontSize="36" Margin="100,0,0,0"/>

            <StackPanel Height="52" Orientation="Horizontal">
                <TextBox Text="Indtast data" Height="49" Margin="104,0,-231.6,0" FontSize="24" HorizontalAlignment="Left" Width="150" />
                <TextBlock Text="(Enhed)" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Left" Height="51" Margin="237.6,0,-334.2,0" Width="159" FontSize="24"/>

            </StackPanel>
            <TextBlock Text="Note" TextWrapping="Wrap" FontSize="36" Margin="100,0,0,0"/>
            <TextBox Text="Indtast note" FontSize="24" Margin="100,0,0,0"/>

        </StackPanel>

        <TextBlock HorizontalAlignment="Left" Margin="10,174,0,0" Text="Opgaveliste" TextWrapping="Wrap" VerticalAlignment="Top" Height="62" Width="550" FontSize="36" FontFamily="Segoe UI"/>
        <ListView Name="OpgaveListView" HorizontalAlignment="Left" SelectedItem="{Binding ValgtOpgave, Mode=TwoWay}" Height="260" Margin="10,227,0,0" VerticalAlignment="Top" Width="537" ItemsSource="{Binding Logbog.OpgaveListe}" FontFamily="Segoe UI"/>
        
        <Button Content="Færdig" HorizontalAlignment="Left" Margin="995,290,0,0" VerticalAlignment="Top" Height="74" Width="181" FontSize="48" Click="Button_Click_Hovedmenu" FontFamily="Segoe UI"/>
        <TextBlock HorizontalAlignment="Left" Margin="982,394,-1,0" Text="Bemærkninger:" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="299" FontSize="36" FontFamily="Segoe UI"/>
        <TextBox HorizontalAlignment="Left" Margin="971,460,0,0" Text="Indtast bemærkning" VerticalAlignment="Top" Height="118" Width="299" FontSize="24"/>
        <Button Content="Gem opgave" HorizontalAlignment="Left" Margin="995,148,0,0" VerticalAlignment="Top" Height="99" Width="228" FontSize="36"/>

        <Button Content="Indsæt" Command="{Binding AddCommand}" HorizontalAlignment="Left" Margin="654,613,0,0" VerticalAlignment="Top" Height="100" Width="200" FontSize="48"/>
        <Button Content="Opdater" Command="{Binding UpdateCommand}" IsEnabled="{Binding OpgaveErValgt}" HorizontalAlignment="Left" Margin="854,613,0,0" VerticalAlignment="Top" Height="100" Width="200" FontSize="48"/>
        <Button Content="Slet" Command="{Binding RemoveCommand}" IsEnabled="{Binding OpgaveErValgt}" HorizontalAlignment="Left" Margin="1054,613,0,0" VerticalAlignment="Top" Height="100" Width="200" FontSize="48"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,492,0,0" Text="ID:" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="300" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" Margin="10,529,0,0" Text="{Binding NyOpgave.ID, Mode=TwoWay}" VerticalAlignment="Top" Height="50" Width="300" FontSize="24" PlaceholderText="Indtast ID"/>
        
        <TextBlock HorizontalAlignment="Left" Margin="320,492,0,0" Text="Status:" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="300" FontSize="24"/>
        <ComboBox HorizontalAlignment="Left" Margin="320,528,0,0" SelectedItem="{Binding NyOpgave.Status, Mode=TwoWay}" ItemsSource="{Binding StatusListe}" VerticalAlignment="Top" FontSize="24" Height="50" Width="300" PlaceholderText="Vælg status"/>
        
        <TextBlock HorizontalAlignment="Left" Margin="10,587,0,0" Text="Navn:" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="300" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" Margin="10,632,0,0" Text="{Binding NyOpgave.Beskrivelse, Mode=TwoWay}" VerticalAlignment="Top" Height="50" Width="300" FontSize="24" PlaceholderText="Indtast navn"/>
        
        <TextBlock HorizontalAlignment="Left" Margin="320,583,0,0" Text="Interval:" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="300" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" Margin="320,632,0,0" Text="{Binding NyOpgave.VentetidIDage, Mode=TwoWay}" VerticalAlignment="Top" Height="50" Width="300" FontSize="24" PlaceholderText="Indtast interval"/>

        <TextBlock HorizontalAlignment="Left" Margin="630,492,0,0" Text="Udstyr ID:" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="300" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" Margin="630,529,0,0" Text="{Binding NyOpgave.UdstyrId, Mode=TwoWay}" VerticalAlignment="Top" Height="50" Width="300" FontSize="24" PlaceholderText="Indtast ID"/>

    </Grid>
</Page>
